<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviews"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MoviesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_moviesSearchFragment"
            app:destination="@id/moviesSearchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_moviesFragment_to_movieReviewFragment"
            app:destination="@id/movieReviewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/moviesSearchFragment"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MoviesSearchFragment"
        tools:layout="@layout/fragment_search_movies">
        <action
            android:id="@+id/action_moviesSearchFragment_to_movieReviewFragment"
            app:destination="@id/movieReviewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/movieReviewFragment"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MovieReviewFragment"
        android:label=""
        tools:layout="@layout/fragment_movie_review"/>
</navigation>