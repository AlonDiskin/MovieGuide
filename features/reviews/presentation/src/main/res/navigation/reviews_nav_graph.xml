<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviews"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MoviesFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieReviewActivity"
            app:destination="@id/movieReviewActivity">

            <argument
                android:name="@string/movie_id_arg"
                app:argType="string"
                android:defaultValue="" />
        </action>
        <action
            android:id="@+id/action_moviesFragment_to_moviesSearchFragment"
            app:destination="@id/moviesSearchFragment" />
    </fragment>
    <activity
        android:id="@+id/movieReviewActivity"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MovieReviewActivity"
        android:label="MovieReviewActivity"
        tools:layout="@layout/activity_movie_review"/>
    <fragment
        android:id="@+id/moviesSearchFragment"
        android:name="com.diskin.alon.movieguide.reviews.presentation.controller.MoviesSearchFragment"
        android:label="MoviesSearchFragment"
        tools:layout="@layout/fragment_search_movies">
        <action
            android:id="@+id/action_moviesSearchFragment_to_movieReviewActivity"
            app:destination="@id/movieReviewActivity" />
    </fragment>
</navigation>